<controls:MetroWindow x:Class="SpellEditor.Sources.Controls.SpellFamilyNames.SpellFamiliesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:common="clr-namespace:SpellEditor.Sources.Controls.Common"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Spell Families Selector"
        Height="820" Width="1466"
        MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        Icon="icon.ico"
        BorderBrush="#1585B5"
        BorderThickness="2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10,10,-10,-10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label Content="{DynamicResource labSpellClassMask1}" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <common:TextOnlyNumericUpDown ValueChanged="SpellMask_text_ValueChanged" x:Name="SpellMask1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="{DynamicResource labSpellClassMask2}" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <common:TextOnlyNumericUpDown ValueChanged="SpellMask_text_ValueChanged" x:Name="SpellMask2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="{DynamicResource labSpellClassMask3}" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <common:TextOnlyNumericUpDown ValueChanged="SpellMask_text_ValueChanged" x:Name="SpellMask3" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="You can rename the families by editing \SpellFamilies\ definitions." HorizontalAlignment="Left" VerticalAlignment="Top" />
        </StackPanel>

        <StackPanel Grid.Column="0" Margin="10,49,-10,-10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="FamiliesSearch"
                 mah:TextBoxHelper.Watermark="Search Family or Spell name..."
                 HorizontalAlignment="Left" VerticalAlignment="Top" Width="660"
                 TextChanged="FamiliesSearch_TextChanged"/>
            <CheckBox Visibility="Collapsed" x:Name="ShowUnusedCheckbox" Content="Show Unused Families" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Content="❌ Clear All" HorizontalAlignment="Left" VerticalAlignment="Top" Click="clear_Button_Click" Width="100"/>
            <Button Content="⟳ Reset" ToolTip="Reset back to original values." HorizontalAlignment="Left" VerticalAlignment="Top" Click="reset_Button_Click" Width="100"/>
            <Button Content="✔ Enable All" HorizontalAlignment="Left" VerticalAlignment="Top" Click="enable_Button_Click" Width="100"/>

        </StackPanel>


        <Border Margin="10,80,94,10"
                BorderThickness="1"
                BorderBrush="{DynamicResource MahApps.Brushes.TextBox.Border}"
                CornerRadius="4"
                >
            <ScrollViewer VerticalScrollBarVisibility="Disabled"
                          HorizontalScrollBarVisibility="Auto"
                          Padding="2">
                <ItemsControl x:Name="MaskList" MinWidth="660" MinHeight="300">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel x:Name="CheckboxesPanel" Orientation="Vertical" >
                            </WrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <Label Content="{DynamicResource filterClassMaskSpells}" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Margin="10,18,0,0"/>
        <common:ThreadSafeTextBox x:Name="FilterClassMaskSpells" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" TextWrapping="Wrap" Grid.Column="1" Margin="137,18,0,0" TextChanged="FilterClassMaskSpells_TextChanged"/>
        <Label Content="{DynamicResource targetClassMaskSpells}" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Margin="0,49,0,0"/>
        <ListBox x:Name="EffectTargetSpellsList" HorizontalAlignment="Left" Width="290" Grid.Column="1" Margin="0,80,0,10" BorderThickness="1"/>

    </Grid>
</controls:MetroWindow>
